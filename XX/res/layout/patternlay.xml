<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidhuman="http://schemas.android.com/apk/res/com.cookandroid.xx"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/PReport"
        android:background="#00000000"
        android:onClick="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#00000000"
            android:orientation="vertical" >

               
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:src="@drawable/p_p" />
            <com.cookandroid.xx.FontButton
               	android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="112문자"
                android:textColor="#ffffff"
                android:textSize="30dp"
                androidhuman:typeface="fonts/JejuGothic.ttf" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/PFriend"
            android:gravity="center"
            android:onClick="true"
            android:background="#00000000"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffffff"
                android:src="@drawable/p_f" />

            <com.cookandroid.xx.FontButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:background="#00000000"
                android:text="지인문자"
                android:textColor="#ffffff"
                android:textSize="30dp"
                androidhuman:typeface="fonts/JejuGothic.ttf" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/PRec"
        android:onClick="true"
        android:background="#00000000"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#00000000"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:background="#00ffffff"
                android:layout_height="wrap_content"
                android:src="@drawable/p_r" />

            <com.cookandroid.xx.FontButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="녹음"
                android:clickable="false"
                android:textColor="#ffffff"
                android:textSize="30dp"
                androidhuman:typeface="fonts/JejuGothic.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/PEtc"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:onClick="true"
            android:background="#00000000"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:background="#00ffffff"
                android:layout_height="wrap_content"
                android:src="@drawable/p_t" />

            <com.cookandroid.xx.FontButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:background="#00000000"
                android:text="테스트"
                android:textColor="#ffffff"
                android:textSize="30dp"
                androidhuman:typeface="fonts/JejuGothic.ttf" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>